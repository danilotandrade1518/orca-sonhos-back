{
  "name": "orca-sonhos-back",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll --testMatch '**/?(*.)+(spec).[tj]s'",
    "test:unity": "jest --runInBand --testMatch '**/?(*.)+(spec).[tj]s'",
    "test:integration": "jest --runInBand --testMatch '**/?(*.)+(test).[tj]s'",
    "test:e2e": "jest --runInBand --testMatch '**/?(*.)+(e2e.test).[tj]s'",
    "test:coverage": "jest --coverage --coverageReporters=text-summary",
    "test:ci": "npm run lint && npm run test:coverage && npm run test:integration",
    "prepare": "husky",
    "migrate": "node-pg-migrate up --migrations-dir=src/infrastructure/database/pg/migrations",
    "migrate:down": "node-pg-migrate down --migrations-dir=src/infrastructure/database/pg/migrations",
    "migrate:create": "node-pg-migrate create --migrations-dir=src/infrastructure/database/pg/migrations"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "applicationinsights": "^2.9.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "node-pg-migrate": {
    "migrations-dir": "src/infrastructure/database/pg/migrations",
    "migration-file-language": "ts",
    "dir": "src/infrastructure/database/pg/migrations"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
