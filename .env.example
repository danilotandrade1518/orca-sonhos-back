########################################
# OrçaSonhos API - Environment Template #
########################################

# Runtime
NODE_ENV=development
HTTP_PORT=3000

# Database (PostgreSQL)
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=

# Logging
LOG_LEVEL=info

# Domain Defaults (keep as-is unless you know you need to change)
CATEGORY_ID_ADJUSTMENT=00000000-0000-0000-0000-000000000001
CATEGORY_ID_TRANSFER=00000000-0000-0000-0000-000000000002

# Authentication (JWT) – Azure AD B2C recommended
# When AUTH_REQUIRED=true, configure the 3 vars below using your B2C discovery document
# - AUTH_JWKS_URI: jwks_uri from the policy discovery (.well-known)
# - AUTH_ISSUER: issuer from the policy discovery (.well-known)
# - AUTH_AUDIENCE: API App (resource) Application ID (GUID) in B2C
AUTH_REQUIRED=true
AUTH_JWKS_URI=https://www.googleapis.com/service_accounts/v1/jwk/securetoken@system.gserviceaccount.com
AUTH_ISSUER=https://securetoken.google.com/AIzaSyCkQKwFo-txr5p7v_rMM56Tznj4V8vA9tc
AUTH_AUDIENCE=AIzaSyCkQKwFo-txr5p7v_rMM56Tznj4V8vA9tc
# Claim used as internal user id (keep default 'sub' for B2C)
AUTH_USER_ID_CLAIM=sub

# CORS (only enable the origins you really need)
# e.g., CORS_ORIGINS=http://localhost:5173,https://app.suaempresa.com
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,PATCH,DELETE
CORS_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=X-Request-Id,TraceId

# Application Insights (optional)
APPINSIGHTS_CONNECTION_STRING=
APPINSIGHTS_ROLE_NAME=orca-sonhos-api
# e.g. "50" means sample 50% of traces
APPINSIGHTS_SAMPLING_PERCENTAGE=
APPINSIGHTS_DISABLED=false